<Window x:Class="pingoverlay.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pingoverlay"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Ping Overlay" MinWidth="410" MinHeight="200" Height="450" Width="410">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="193*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="connectionInputBox" Grid.Column="0" HorizontalAlignment="Right" Margin="0,0,5,0"  TextWrapping="Wrap" Text=""  VerticalAlignment="Center" Width="200"/>
            <Button Grid.Column="1" Content="Add" Click="AddConnectionButtonClick" HorizontalAlignment="Left"  VerticalAlignment="Center"/>

            <Button Grid.Column="3" Content="Ping" Margin="0,0,7,0" Click="ButtonPing" HorizontalAlignment="Right" VerticalAlignment="Center" Height="20" Width="40"/>
            <xctk:IntegerUpDown Grid.Column="2" Width="50" Value="{Binding Delay, Mode=TwoWay}"/>
        </Grid>

        <ListBox Grid.Row="1" MinWidth="375" HorizontalContentAlignment="Stretch" ItemsSource="{Binding Connections}" SelectionChanged="ListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition MinWidth="150" Width="*"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Grid.Column="0" Width="15" Height="15" Fill="{Binding StatusColor}"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock  Grid.Column="1" Margin="20,0,0,0" FontSize="18" Text="{Binding Ipadd}" VerticalAlignment="Center" />

                        <TextBlock Margin="20,0,0,0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left"><Run Text="{Binding Rtt}"/><Run Text=" "/><Run Text=" ms"/></TextBlock>
                        <TextBlock Margin="20,0,0,0" Grid.Column="3" Text="{Binding Status}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        <Button Grid.Column="4" Margin="20,0,0,0" Width="20" Click="RemoveButtonClick" HorizontalAlignment="Center" VerticalAlignment="Center" Content="X"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions >
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Width="100" Height="20" HorizontalAlignment="Left" Margin="20,0,0,0"  Content="Export" Click="Export"/>
            <Button Grid.Column="1" Width="100" Height="20" HorizontalAlignment="Right" Margin="0,0,20,0"  Content="Import" Click="Import"/>
        </Grid>

    </Grid>
</Window>
